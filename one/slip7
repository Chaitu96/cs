6.	 
7.	   printf("Enter the value of x and y\n");
8.	   scanf("%d%d", &x, &y);
9.	 
10.	   printf("Before Swapping\nx = %d\ny = %d\n", x, y);
11.	 
12.	   a = &x;
13.	   b = &y;
14.	 
15.	   temp = *b;
16.	   *b = *a;
17.	   *a = temp;
18.	 
19.	   printf("After Swapping\nx = %d\ny = %d\n", x, y);
